
$ls := {
    |@ $args |
    "List names of files non-recursively"
    "    Unlike find and ll, ls only shows you the names of files.

    Example:

    ls /"
    find recursive=$false @ $args | sort file| select file
}

$ll := {
    |@ $args|
    "List files non-recursively"
    "
    Example:

    ll .."
    find recursive=$false @ $args | sort file
}
